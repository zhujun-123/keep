{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/home/home",
			"style": {
				"app-plus": {
					"scrollIndicator":"none",//隐藏滚动条				
					"titleNView": {
						"searchInput": {
							"align":"center",
							"backgroundColor":"#F7F7F7",
							"borderRadius":"4px",
							"placeholder":"大家都在搜减脂",
							"placeholderColor":"#CCCCCC",
							"disabled":true
						},
						"buttons": [
							//左边
							{
								"color":"#FF9619",
								"colorPressed":"#BBBBBB",
								"float":"left",
								"fontSize":"28px",
								"fontSrc":"/static/font/icon.ttf",
								"text":"\ue609"
							},
							//右边
							{
								"color":"#000000",
								"colorPressed":"#BBBBBB",
								"float":"right",
								"fontSize":"28px",
								"fontSrc":"/static/font/icon.ttf",
								"text":"\ue653"
							}
						]
					}
				}
			}
		}, {
			"path": "pages/sport/sport",
			"style": {}
		}, {
			"path": "pages/me/me",
			"style": {}
		}, {
			"path": "pages/mall/mall",
			"style": {
				"enablePullDownRefresh": true,
				"app-plus": {
					"titleNView": false
				}
			}
		}, {
			"path": "pages/plan/plan",
			"style": {}
		}
	    ,{
            "path" : "pages/home/home-detail/home-detail",
            "style" : {}
        }
        ,{
            "path" : "pages/home/add-input/add-input",
            "style": {
            	"app-plus": {
            		"animationType":"slide-in-bottom",
            		"animationDuration": 200,
            		//禁止原生导航
            		"titleNView": false
            	}
            }
        }
        ,{
            "path" : "pages/search/search",
            "style":{
            	"enablePullDownRefresh": true,
            	"app-plus": {
            		"scrollIndicator":"none",//隐藏滚动条
            		"titleNView": {
            			"autoBackButton": false,
            			// 搜索框配置
            			"searchInput": {
            				"align":"left",
            				"backgroundColor":"#F7F7F7",
            				"borderRadius":"4px",
            				"placeholder":"大家都在搜减脂",
            				"placeholderColor":"#CCCCCC",
            				"disabled":false
            			},
            			"buttons": [
            				//右边
            				{
            					"color":"#000000",
            					"colorPressed":"#BBBBBB",
            					"float":"right",
            					"fontSize":"16px",
            					"text":"取消"
            				}
            			]
            		}
            	}
            }
        }
        ,{
            "path" : "pages/mall/mall-search/mall-search",
            "style" : {}
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
